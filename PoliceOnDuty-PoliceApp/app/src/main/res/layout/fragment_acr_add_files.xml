<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/acr_frag_container_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dashboard.add_criminal_report.acr_fragment.acr_criminal_location_details">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- START Toolbar Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_add_criminal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/appMainColor"
                android:paddingLeft="20dp"
                android:paddingTop="20dp">

                <ImageView
                    android:id="@+id/general_back_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rounded_button"
                    android:src="@drawable/general_back_arrow_icon" />

                <TextView
                    android:id="@+id/selectedCriminal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@+id/general_back_activity"
                    android:fontFamily="@font/baloo"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Add Criminal Report"
                    android:textColor="@color/basic_white"
                    android:textSize="24sp" />

            </RelativeLayout>

        </LinearLayout>
        <!-- END Toolbar Header -->

        <!-- START Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="565dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/criminal_recycler_view"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Label Criminal Information -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/acr_criminal_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:enabled="false"
                    android:focusable="false"
                    android:fontFamily="@font/baloo"
                    android:includeFontPadding="false"
                    android:text="Criminal Information"
                    android:textColor="@color/basic_black" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- line below Label Criminal Information -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@id/criminal_location_details"
                android:layout_marginTop="-20dp"

                android:background="@color/golden_brown" />

            <!-- Add Passport Size Photo Layout -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Image View in which pp size image will be set -->
                <ImageView
                    android:id="@+id/acr_passport_size_photo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/acr_photo_pp_size_icon" />

                <!--Button to add pp size photo -->
                <Button
                    android:id="@+id/acr_btn_add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toRightOf="@+id/acr_passport_size_photo"
                    android:background="@drawable/rounded_button_amc"
                    android:fontFamily="@font/baloo"
                    android:padding="10dp"
                    android:text="Add Photo +"
                    android:textAllCaps="false"
                    android:textColor="@color/basic_white" />

            </RelativeLayout>

            <!-- Line Below Add Passport Size Photo Layout -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:background="@color/golden_brown" />

            <!-- Add Fingerprint Layout -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Add Fingerprint Label + btn-->
                <Button
                    android:id="@+id/acr_add_fingerprint"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:fontFamily="@font/baloo"
                    android:textSize="15dp"
                    android:paddingLeft="-25dp"
                    android:paddingRight="20dp"
                    android:text="Add Criminal Fingerprint"
                    android:textAllCaps="false"
                    android:textColor="@color/basic_black" />

                <!--Add Fingerprint logo + btn-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/acr_add_fingerprint"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/acr_fingerprint_icon"
                    android:paddingLeft="20dp" />

            </RelativeLayout>

            <!-- Line Below Add Fingerprint btn -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/golden_brown" />

            <!-- Add Criminal Voice Layout -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Add Criminal Voice Label + btn-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/acr_criminal_id_no"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Any Id No./ Image"
                    app:counterMaxLength="6"
                    android:layout_marginLeft="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--Add Criminal Voice Label + btn-->
                <Button
                    android:id="@+id/acr_add_id_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rounded_button_amc"
                    android:fontFamily="@font/baloo"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:text="Add Photo +"
                    android:textAllCaps="false"
                    android:textColor="@color/basic_white" />

            </RelativeLayout>

            <!-- Line Below Add Fingerprint btn -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/golden_brown" />

            <!-- Add Criminal Voice Layout -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Add Criminal Voice Label + btn-->
                <Button
                    android:id="@+id/acr_add_Voice"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:fontFamily="@font/baloo"
                    android:paddingLeft="-65dp"
                    android:textSize="15dp"
                    android:paddingRight="20dp"
                    android:text="Add Criminal Voice"
                    android:textAllCaps="false"
                    android:textColor="@color/basic_black" />

                <!--Add Criminal Voice Label + btn-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/acr_add_Voice"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/acr_mic_icon"
                    android:paddingLeft="20dp" />

            </RelativeLayout>

            <!-- Done Button leading to the dashboard-->
            <Button
                android:id="@+id/acr_btn_info_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="7.2dp"
                android:background="@drawable/rounded_button"
                android:text="Done"
                android:textColor="@color/basic_white" />

        </LinearLayout>
        <!-- END Main Content -->

    </LinearLayout>

</FrameLayout>