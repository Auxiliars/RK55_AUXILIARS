<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dashboard.nav_drawer.SOS_Emergency">

    <!-- START Toolbar Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/appMainColor"
            android:paddingLeft="20dp"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/general_back_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_button"
                android:src="@drawable/general_back_arrow_icon" />

            <TextView
                android:id="@+id/nav_text_SOS_Emergency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@+id/general_back_activity"
                android:fontFamily="@font/baloo"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="SOS - Emergency"
                android:textColor="@color/basic_white"
                android:textSize="24sp" />

        </RelativeLayout>

    </LinearLayout>
    <!-- END Toolbar Header -->

    <!-- START Statistics Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="665dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/criminal_recycler_view"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:padding="15dp"
            android:textAllCaps="false"
            android:textColor="@color/basic_white"
            android:fontFamily="@font/bungee"
            android:background="@drawable/rounded_button_red"
            android:text="SOS\n+\nEmergency"
            android:textSize="34sp"
            android:layout_marginTop="100dp"/>

    </LinearLayout>
    <!-- End Statistics Content -->

</LinearLayout>