{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/login.html"
        
      },
      {
          "source" : "/heatmap",
          "destination": "/heatMapIndex.html"
      },
      {
        "source":"/reportform",
        "destination":"/reportForm.html"

      },
      {
        "source":"/criminalStats",
        "destination":"/webStats.html"

      },
      {
        "source":"/jsontoexcel",
        "destination":"/jsontoexcel.html"
      }
    
    ]
  }
}
